.login {
  width: 100vw;
  height: 100vh;
  background-image: url(image//bg.jpg);
  background-size: 100% 100%;
}
.login .login-header {
  width: 100%;
  height: 80px;
  background-color: rgba(122, 120, 121, 0.466);
  display: flex;
  align-items: center;
}
.login .login-header img {
  width: 40px;
  margin: 0px 15px 0px 30px;
}
.login .login-header h1 {
  color: white;
  font-size: 25px;
  font-weight: bold;
}
.login .login-content {
  width: 400px;
  height: 300px;
  margin: 130px auto;
}
.login .login-content .login-box {
  height: 100%;
}
.login .login-content .login-box h2 {
  color: #fff;
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 30px;
}
.login .login-content .login-box .login-form-button {
  width: 100%;
}
